<h1>Display your Pirate here</h1>
<div class="pirate">
    <h2>Name: <%= @pirate.name %> </h2>
    <h2>Weight: <%= @pirate.weight %>lbs </h2>
    <h2>Height: <%= @pirate.height %> inches</h2>
</div>

<h2>Display your first ship here</h2>
 <% @ships.each do |deets| %> 
    <div class = "ship">
        <p>Name: <%= deets.name %></p>
        <p>Type: <%= deets.type %></p>
        <p>Booty: <%= deets.booty %></p>
    </div>
     <% end %>

